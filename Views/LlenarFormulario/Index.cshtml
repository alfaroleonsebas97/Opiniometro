@model Opiniometro_WebApp.Models.EstudianteGruposMatriculado

@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My page</title>
</head>
<body>
    <h2> Cursos disponibles</h2>     

    <table id="tabla-gruposMatriculado" class="table table-sm table-hover" cellspacing="0" width="100">
        <tr>
            <th align='left'>
                Sigla
            </th>
            <th align='left'>
                Curso
            </th>
            <th align='left'>
                Semestre
            </th>
            <th align='left'>
                Año
            </th>
            <th align='left'>
                Nombre Profesor
            </th>
            <th align='left'>
                Formulario
            </th>
        </tr>
            <!-- Despliega los datos de los grupos usando un template personalizado: ElegirGrupoEditorTemplate -->
            @foreach (var item in Model.gruposMatriculado)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.siglaCursoMatriculado)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.nombreCursoMatriculado)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.semestreGrupo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.anoGrupo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.nombreProfeCurso)
                        @Html.DisplayFor(model => item.apellidoProfe)
                    </td>

                </tr>
               
            }
    </table>


</body>
</html>
