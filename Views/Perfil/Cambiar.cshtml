@{
    ViewBag.Title = "Seleccionar Perfil";
}

@using Opiniometro_WebApp.Models

@model Opiniometro_WebApp.Models.PerfilesUsuario

@using (Html.BeginForm())
{

<h2>Seleccione un perfil</h2>
<br />
  
       List<SelectListItem> lista = new List<SelectListItem>();
       for (int contador = 0; contador < Model.ListaPerfiles.Count(); contador++)
       {
           lista.Add(new SelectListItem
           {
               Text = Model.ListaPerfiles.ElementAt(contador),
               Value = Model.ListaPerfiles.ElementAt(contador)
           });
       }
 


    @Html.DropDownListFor(Model => Model.perfilSeleccionado, lista, htmlAttributes: new { @class = "form-control" })

    <br />
    <br />

    <input type="submit" value="Aceptar" class="btn btn-default" style=" margin-right:10px" />
    @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })

}

